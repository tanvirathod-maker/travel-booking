def search_action():
    user_input =search_entry.get()
    messagebox.showinfo("searche the result for :{user_input}")

    #create the window
    root = tk.Tk()
    root.title("simple button app")
    #lable
    tk.lable(root,text="search what you want :").pack(pady=5)
    #search input field
    search_entry = tk.Entry(root,width=30)
    search_enty.pack()
    #search button
    search_button =tk.button(root,text="search",command=search_action)
    search_button =tk.button.pack(pady=10)
    #run the window
    root.mainloop()

